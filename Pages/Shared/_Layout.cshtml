@using SparkAuto.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SparkAuto</title>

    <environment include="Development">
        <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />-->
    </environment>
    <environment exclude="Development">
        <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    </environment>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/theme.css">
</head>
<body class="search-background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container">
                <a class="navbar-brand text-info" asp-area="" asp-page="/Index">
                <img src="~/images/car-engine2.png" />
                    <label class="text-info" style="cursor:pointer"></label>                
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        
                        @if (User.IsInRole(SD.CustomerEndUser) || User.IsInRole(SD.AdminEndUser))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Users/Index"><i class="fad fa-users"></i>Customers</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.AdminEndUser))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Reports/Index"> <i class="fad fa-chart-pie-alt"></i> Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/ServiceTypes/Index"> <i class="fa fa-wrench"></i> Service Types</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Settings/Index"> <i class="fad fa-cog"></i> Settings</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-5">
        @RenderBody()
    </main>



    
    
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="https://kit.fontawesome.com/e9d97a0e27.js" crossorigin="anonymous"></script>
    <script src="~/js/fontawesome-pro.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
